---
import MainLayout from '../layouts/MainLayout.astro';

const foregroundColor = "hsl(10,50%,50%)";
const isRed = true;
---

<MainLayout title=" My Blog">
	<h1>My Blog</h1>
	<p class:list={["big", { red: isRed }]}>Hello <span>world</span>!</p>
</MainLayout>

<style define:vars={{foregroundColor}}>
	h1 {
		font-size: 4rem;
		color: var(--foregroundColor);
	}

	.big {
		font-size: 2rem;
	}
	.red {
		color: red;
	}
</style>